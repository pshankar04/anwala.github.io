$LAB.wait(function(){

      var load = false;
      var offset = $('.row-news:last').offset();
      var nbscroll = 1;
      var limit = 20;


      if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) var height = 6000;
      else var height = 4000;


      $(window).scroll(function(){

         if($('.row-news').length >= limit ){

              //$('#footer').show();
              $('.loadmore').show();

          }

          if( ($(window).scrollTop() >= $(document).height() - $(window).height() - height) &&
               load === false && ($('.row-news').length >= 4) && ($('.row-news').length < limit) ){

              //$('#footer').fadeOut(500);
              nbscroll = parseInt(nbscroll) + 1;
              loadNews(nbscroll);
          
          }

      });

      $(document).on ("click", "#loadmore", function () {

          limit += limit;
          $('.loadmore').fadeOut(500);
          //$('#footer').fadeOut(500);
          nbscroll = parseInt(nbscroll) + 1;
          loadNews(nbscroll);

      });

    function loadNews(nbscroll){

        load = true;
        $('.load').show();
        
          $.ajax({


                  url: Routing.generate('addict_web_load', {_locale : "en", load: "load", index : "article_newsCategorie", id : "55b69b1684a97539138b457c"}),

                  type: 'GET',
                  data: 'last='+nbscroll + '&name=' + "Home",
                  async: true,


                  success: function(data) {


                      $('.load').fadeOut(500);
                      $('.row-news:last').after(data);
                      offset = $('.row-news:last').offset();
                      load = false;

                  }

          });

      }//end loadNews


})
