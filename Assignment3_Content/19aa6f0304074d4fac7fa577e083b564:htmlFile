    //GA
    function track(type, label, action, id){

        ga('send', 'event', { eventCategory: type, eventAction: action, eventLabel: label, transport: 'beacon'});

        if(type == 'outbound'){
            if(id !== 'undefined') socket.emit('news-view', id, 'football');
            window.open(label,'_blank');
        }

    }


