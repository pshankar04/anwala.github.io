socket.on('comment5a80ad97e054473f1e4839d9', function(msg, user_photo, user_name, comment_id){
  var cmt = "<li class='comment'><div class='avatar'><img src='" + user_photo + "' width='50' height='50' alt='avatar'></div><div class='comment-info'><span class='comment-user'>" + user_name + " - </span><span class='comment-date'>Today at 09:26 pm</span><p class='comment-content'>" + msg + "</p></div><div class='comment-social'><a id='comment-like-link" + comment_id + "' href='#like-comment' onclick='likeComment(\"" + comment_id + "\");' class='like-link'><span id='comment-like-count" + comment_id + "' class='comment-count'></span><span id='comment-like-img" + comment_id + "' class='fa comment-thumbs fa-thumbs-up'></span></a><a id='comment-dislike-link" + comment_id + "' href='#like-comment' onclick='dislikeComment(\"" + comment_id + "\");' class='dislike-link'><span id='comment-dislike-img" + comment_id + "' class='fa comment-thumbs fa-thumbs-down'></span><span id='comment-dislike-count" + comment_id + "' class='comment-count'></span></a></div></li>";

  var value = parseInt($("#nb-comments-loaded").text());

  if(isNaN(value)){

        document.getElementById("nb-comments-loaded").innerHTML = 1;
        $('#nb-comments-loaded').append('/<span id="nb-comments-count">1</span> Comment(s)');

  }else{

        document.getElementById("nb-comments-loaded").innerHTML =  value + 1;
        document.getElementById("nb-comments-count").innerHTML =  parseInt($("#nb-comments-count").text()) + 1;
        document.getElementById("news-comments").innerHTML =  parseInt($("#news-comments").text()) + 1;

  }

  $('#comments').prepend(cmt);
});


