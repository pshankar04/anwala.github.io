//on comment news
function comment(){

    if(!connected) {
          $('#connectModal').appendTo("body").modal('show');
          return false;
    }//if user not connected

    var text = $('.comments-input').text();
    if(text == ''){
        $('#comments-input-span').popover('show');
        setTimeout(function() {$('#comments-input-span').popover('hide')},5000);
        return false;
    }//if empty text

    socket.emit('postComment', '5a80ad97e054473f1e4839d9', '', '', '', '', text, 'football' );
    $('.comments-input').text('');

    return false;
}


//on like news
function likeNews(){

  if(!connected) {
        $('#connectModal').appendTo("body").modal('show');
        return false;
  }

  if(document.getElementById("news-like-link").classList.contains("liked") == false){

    socket.emit('like-news', '5a80ad97e054473f1e4839d9', '', 'football' );
    //document.getElementById("news-like-count").innerHTML =  nbLike + 1;
    document.getElementById("news-like-link").classList.add("liked");
    document.getElementById('news-dislike-link').classList.add("disabled");

  }else{

    socket.emit('remove-like-news', '5a80ad97e054473f1e4839d9', '', 'football' );
    //document.getElementById("news-like-count").innerHTML =  nbLike - 1;
    document.getElementById("news-like-link").classList.remove("liked");
    document.getElementById('news-dislike-link').classList.remove("disabled");


  }

  return false;
}

 //on dislike news
 function dislikeNews(){

  if(!connected) {
        $('#connectModal').appendTo("body").modal('show');
        return false;
  }


  if(document.getElementById("news-dislike-link").classList.contains("disliked") == false){

    socket.emit('dislike-news', '5a80ad97e054473f1e4839d9', '', 'football' );
    //document.getElementById("news-dislike-count").innerHTML =  nbDislike + 1;
    document.getElementById("news-dislike-link").classList.add("disliked");
    document.getElementById('news-like-link').classList.add("disabled");

  }else{

    socket.emit('remove-dislike-news', '5a80ad97e054473f1e4839d9', '', 'football' );
    //document.getElementById("news-dislike-count").innerHTML =  nbDislike - 1;
    document.getElementById("news-dislike-link").classList.remove("disliked");
    document.getElementById('news-like-link').classList.remove("disabled");

  }

  return false;
 }


 //likeComment
function likeComment(id){

  if(!connected) {
        $('#connectModal').appendTo("body").modal('show');
        return false;
  }

  if(document.getElementById("comment-like-link" + id).classList.contains("liked") == false){

    socket.emit('like-comment', id, '', 'football' );
    //document.getElementById("comment-like-count" + id).innerHTML =  nbLike + 1;
    document.getElementById("comment-like-link" + id).classList.add("liked");
    document.getElementById("comment-dislike-link" + id).classList.add("disabled");

  }else{

    socket.emit('remove-like-comment', id, '', 'football' );
    //document.getElementById("comment-like-count" + id).innerHTML =  nbLike - 1;
    document.getElementById("comment-like-link" + id).classList.remove("liked");
    document.getElementById("comment-dislike-link" + id).classList.remove("disabled");

  }

  return false;
}


//dislikeComment
function dislikeComment(id){

  if(!connected) {
        $('#connectModal').appendTo("body").modal('show');
        return false;
  }


  if(document.getElementById("comment-dislike-link" + id).classList.contains("disliked") == false){

    socket.emit('dislike-comment', id, '', 'football' );
    //document.getElementById("comment-dislike-count" + id).innerHTML =  nbDislike + 1;
    document.getElementById("comment-dislike-link" + id).classList.add("disliked");
    document.getElementById("comment-like-link" + id).classList.add("disabled");

  }else{

    socket.emit('remove-dislike-comment', id, '', 'football' );
    //document.getElementById("comment-dislike-count" + id).innerHTML =  nbDislike - 1;
    document.getElementById("comment-dislike-link" + id).classList.remove("disliked");
    document.getElementById("comment-like-link" + id).classList.remove("disabled");

  }

  return false;
}


//load comments
function loadComments(){

   $('.loadmore').fadeOut(500);
   $('.spinner').show();

   $.ajax({

        url: Routing.generate('addict_web_loadComments', {new_id : "5a80ad97e054473f1e4839d9", page_number : page_number, limit : 5}),
        type: 'GET',
        async: true,


        success: function(data) {

            $('.spinner').fadeOut(500);
            $('.comment:last').after(data);

            if($('.comment').length < limit ){
                  $('.loadmore').show();
            }

            document.getElementById("nb-comments-loaded").innerHTML =  $('.comment').length;
            page_number = page_number + 1;

        }

    });
}
